.page-rule{
    background-color: #f0f0f0;
    width: 100%;
    height: 100%;
}
.page-rule .title{
    height: 75px;
    line-height: 75px;
    vertical-align: middle;
    border-bottom: 1px solid #f0f0f0;
    background-color: #f0f0f0;
    padding-left: 10px;
    width: 97%;
}

.page-rule .content{
    background-color: #fff;
    padding-left: 10px;
    width: 97%;
}
.page-rule .item{
    border-bottom: 1px solid #f1f1f1;
    padding-top: 5px;
    padding-bottom: 5px;
    font-size: 13px;
    height: 45px;
    line-height: 45px;
    vertical-align: middle;
}
.page-rule .reward{
    height: 100px;
    font-size: 13px;
    padding-top: 10px;
}
/* 外层组件的宽度可设置成100%或具体数值 */
.page-rule .adContainer {
    margin-top: 10px;
    width: 100%;
}
