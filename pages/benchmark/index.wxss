.page-benchmark{
    background-color: #f0f0f0;

}
.page-benchmark .title{
    padding-left: 10px;
    height: 55px;
    line-height: 55px;
    vertical-align: middle;
}
.page-benchmark .items{
    background-color: #fff;
}

.page-benchmark .items .item{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    border-top: 1px solid #f0f0f0;
    height: 45px;
    margin-left: auto;
}
.page-benchmark .items .item .nickName{
    padding-left: 10px;
    width: 200px;
}
.page-benchmark .items .item image{
    padding-left: 10px;
    width: 32px;
    height: 32px;
}
.page-benchmark .someproduct{
    display: flex;
    flex-direction: row;
    flex-wrap: no-wrap;
    justify-content: flex-start;
    align-items: center;
    padding-left: 10px;
    height: 50px;
    vertical-align: middle;
    border-bottom: 1px solid #f0f0f0;
}
.page-benchmark .someproduct .title{
    padding-left: 10px;
    width: 250px;
}
/* 外层组件的宽度可设置成100%或具体数值 */
.page-benchmark .adContainer { 
    margin-top: 5px;
    width: 100%;
}