.page-challenge{
    width: 100%;
    background-color: #f0f0f0;
    padding: 10rpx;
    height: -webkit-fill-available;
}
.page-challenge .product{
    padding-left: 10px;
    height: 75px;
    line-height: 75px;
    vertical-align: middle;
    background-color: #fff;
    border-bottom:1px solid #f0f0f0;
}
.page-challenge .producttype{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    
}
.page-challenge .producttype .typeicon{
    width: 35%;
    padding: 5px;
}
.page-challenge .producttype .typeicon image{
    width: 100%;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.commodity_attr_box .someproduct{
    display: flex;
    flex-direction: row;
    flex-wrap: no-wrap;
    justify-content: flex-start;
    align-items: center;
    padding-left: 10px;
    height: 50px;
    vertical-align: middle;
    border-bottom: 1px solid #f0f0f0;
}
.commodity_attr_box .someproduct .title{
    padding-left: 10px;
}